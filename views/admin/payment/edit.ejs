  <!-- Content Wrapper. Contains page content -->
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Form Edit Payment milik "<% payment.banks.forEach(bank=>{%>
                  <%=bank.name %>"
                  <%  }) %></h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="POST" action="/payment/edit/<%= payment._id %>?_method=PUT">
                <div class="card-body">
                  <div class="form-group">
                    <label for="type">Jenis Payment</label>
                    <input type="text" id="type" name="type" class="form-control" placeholder="Masukan jenis payment"
                      value="<%=payment.type %>" required>
                  </div>
                  <div class="form-group">
                    <label>Bank</label>
                    <div class="select2-purple">
                      <select class="form-control select2" multiple="multiple" style="width: 100%;" required
                        name="banks" data-placeholder="Pilih Bank">
                        <% bank.forEach(bank=>{ %>
                        <option value="<%= bank._id  %>" <% payment.banks.forEach(paymentBanks =>{ %>
                          <% if(bank._id.toString()=== paymentBanks._id.toString()){ %> selected <% }}) %>>
                          <%= bank.name %>-<%= bank.nameBank %>-<%= bank.noRekening %>
                        </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
